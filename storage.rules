rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // --- Simplified Single-Company Rules --- //

    function isAuthenticated() {
      return request.auth != null;
    }

    function isRole(role) {
      return request.auth.token.role == role;
    }

    function isAdmin() {
      return isRole('super-admin') || isRole('company-admin');
    }

    // All documents are stored in a single folder.
    match /documents/{documentId} {
      // Any authenticated user can view any document.
      allow get: if isAuthenticated();
      // Only admins can upload, update, or delete documents.
      allow write: if isAdmin();
    }

    // Deny all other access by default.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}